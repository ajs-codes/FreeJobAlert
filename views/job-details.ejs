<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs'); %>
</head>

<body>
    <%- include('./partials/header.ejs'); %>
  
        <div class="container-fluid  bg-dark  py-3">
            <div class="row">
                <div class="col-12 text-center text-light">
                    <h5>
                        <%- news.Title %>
                    </h5>
                </div>
            </div>
        </div>
  <!-- changed -->
<div class="container-fluid  bg-light py-5">
        <div class="container  ">
            <div class="row">
                <div class="col-md-8 px-3 ">
                    <div class="card shadow">
                        <div class="alert text-center border " role="alert">
                            <h4> <%- news.CompanyDetails.CompanyName %></h4>
                            <p> <%- news.CompanyDetails.AdvtNo %></p>
                            <h5> <%- news.CompanyDetails.VacancyName %></h5>
                        </div>
                        <div class="alert " role="alert">
                     <b>    Name of the Post :</b>   <span class="text-dark px-3">
                        <%- news.BriefInformation %>
                    </span>
                        </div>
                        <div class="alert " role="alert">
                           <b> Post Date :</b> <span class="text-dark  px-3"><%- news.Postdate %></span>
                        </div>
                        <div class="alert " role="alert">
                         <b>   Latest Update :</b><span class="text-dark px-3"><%- news.Postdate %></span>
                        </div>
                        <div class="alert " role="alert">
                          <b>  Total Vacancy :</b><span class="text-dark px-3"><%- news.TotalVacancy %></span>
                        </div>
                        <div class="alert " role="alert">
                            <h4 class="alert-heading">Brief Information :</h4>
                            <p> <%- news.BriefInformation %></p>
                        </div>
                        <li class="list-group-item">
                            <div class="alert text-center" role="alert">
                                <h4 class="text-center">Qualification</h4>
                                <%- news.Qualification %>
                            </div>
                        </li>
                    </div>
                </div>
                <div class="col-md-4 ">
                    
                   
                        <div class="card mt-3 mb-4">
                            <div class="card-header text-center bg-dark text-light ">
                               <b> Application Fee</b>
                            </div>
                            <ul class="list-group list-group-flush">
                                <% if(news.ApplicationFee.fees.length != 0) {%>
                                <% for(var i = 0; i < news.ApplicationFee.fees.length; i++) {%>
                                <li class="list-group-item"><%- news.ApplicationFee.fees[i] %></li>
                                <% } %>
                                <% } else { %>
                                    <li class="list-group-item">No Application fee</li>
                                <% } %>
                            </ul>
                        </div>
                   
                    
                        <div class="card my-4">
                            <div class="card-header text-center bg-dark text-light">
                              <b>  Important Dates</b>
                            </div>
                            <ul class="list-group list-group-flush">
                                <% for(var i = 0; i < news.ImportantDates.DatesInfo.length; i++) { %>
                                    <li class="list-group-item"><%- news.ImportantDates.DatesInfo[i] %></li>
                                <% } %>
                            </ul>
                        </div>
                  
                    
                        <div class="card my-4">
                            <div class="card-header text-center bg-dark text-light  ">
                               <b> Age Limit (as on 01-01-2019) </b>
                            </div>
                            <ul class="list-group list-group-flush">
                                <% for(var i = 0; i < news.AgeLimit.LimitData.length; i++) { %>
                                    <li class="list-group-item"><%- news.AgeLimit.LimitData[i] %></li>
                                <% } %>
                            </ul>
                        </div>
                                    
                </div>
            </div>
        </div>
        </div>
    </div>
        <%- include('./partials/footer.ejs'); %>
</body>

</html>